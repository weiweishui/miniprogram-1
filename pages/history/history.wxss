/* pages/history/history.wxss */
.container {
    padding: 20rpx;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  .history-list {
    padding-bottom: 40rpx;
  }
  
  .history-item {
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .item-header {
    margin-bottom: 20rpx;
  }
  
  .date {
    font-size: 24rpx;
    color: #999;
  }
  
  .item-content {
    display: flex;
    align-items: center;
  }
  
  .thumbnail {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
    background: #f0f0f0;
  }
  
  .info {
    flex: 1;
    margin-left: 20rpx;
  }
  
  .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .summary {
    font-size: 28rpx;
    color: #666;
  }
  
  .empty-state {
    text-align: center;
    padding: 100rpx 0;
    color: #999;
    font-size: 28rpx;
  }
  
  .upload-btn {
    display: inline-block;
    margin-top: 40rpx;
    padding: 20rpx 60rpx;
    background: #1296db;
    color: #fff;
    border-radius: 36rpx;
    font-size: 28rpx;
  }