/* pages/upload/upload.wxss */
.container {
    padding: 30rpx;
  }
  
  .upload-area {
    width: 100%;
    height: 400rpx;
    background: #f5f5f5;
    border: 2rpx dashed #ccc;
    border-radius: 12rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .upload-hint {
    text-align: center;
  }
  
  .hint-text {
    font-size: 32rpx;
    color: #333;
    display: block;
    margin-bottom: 20rpx;
  }
  
  .sub-hint {
    font-size: 28rpx;
    color: #999;
  }
  
  .preview-image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
  }
  
  .button-group {
    margin-top: 40rpx;
  }
  
  .btn {
    margin: 20rpx 0;
    padding: 24rpx 0;
    border-radius: 12rpx;
    font-size: 32rpx;
  }
  
  .primary {
    background-color: #1296db;
    color: #fff;
  }
  
  .secondary {
    background-color: #f5f5f5;
    color: #333;
  }