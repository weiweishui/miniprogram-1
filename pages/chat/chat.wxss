/* pages/chat/chat.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
  }
  
  .image-section {
    padding: 20rpx;
    background: #fff;
  }
  
  .question-image {
    width: 100%;
    height: 300rpx;
    background: #f0f0f0;
  }
  
  .chat-section {
    flex: 1;
    padding: 20rpx;
    overflow-y: auto;
  }
  
  .message {
    margin-bottom: 20rpx;
  }
  
  .message.ai {
    display: flex;
    justify-content: flex-start;
  }
  
  .message.user {
    display: flex;
    justify-content: flex-end;
  }
  
  .message-content {
    max-width: 80%;
    padding: 20rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  .ai .message-content {
    background: #fff;
    color: #333;
  }
  
  .user .message-content {
    background: #1296db;
    color: #fff;
  }
  
  .bottom-section {
    background: #fff;
    border-top: 1rpx solid #eee;
  }
  
  .input-section {
    padding: 20rpx;
    display: flex;
    align-items: center;
  }
  
  .input {
    flex: 1;
    height: 72rpx;
    background: #f5f5f5;
    border-radius: 36rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
  }
  
  .send-btn {
    margin-left: 20rpx;
    width: 120rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: #1296db;
    color: #fff;
    border-radius: 36rpx;
    font-size: 28rpx;
    padding: 0;
  }
  
  .function-section {
    padding: 20rpx;
    border-top: 1rpx solid #eee;
  }
  
  .function-btn {
    background: #1296db;
    color: #fff;
    font-size: 28rpx;
    border-radius: 36rpx;
  }