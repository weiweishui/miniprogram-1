/**index.wxss**/
.container {
    padding: 30rpx;
  }
  
  .header {
    text-align: center;
    margin: 60rpx 0;
  }
  
  .title {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #666;
    margin-top: 20rpx;
    display: block;
  }
  
  .button-group {
    margin: 60rpx 0;
  }
  
  .btn {
    margin: 20rpx 0;
    padding: 24rpx 0;
    text-align: center;
    border-radius: 12rpx;
    font-size: 32rpx;
  }
  
  .primary {
    background-color: #1296db;
    color: #fff;
  }
  
  .secondary {
    background-color: #f5f5f5;
    color: #333;
  }
  
  .intro {
    margin-top: 60rpx;
    background: #f8f8f8;
    padding: 30rpx;
    border-radius: 12rpx;
  }
  
  .intro-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    display: block;
  }
  
  .intro-item {
    font-size: 28rpx;
    color: #666;
    line-height: 2;
  }